@model AccountType
@{
    ViewData["Title"] = "Create Account Type";
}

<h1>Create Account Type</h1>
<h5>
    It referes as how we can group accounts
    Examples: loans, credit cards, etc
</h5>
<!-- errors from model only -->
<div asp-validation-summary="ModelOnly" class="text-danger">
</div>
<!--calling AccountTypesController.Create [post] when click submit button-->
<form asp-action="Create">
    <div class="mb-3">
        <!-- asp-for puts name of the field in the label-->
        <label asp-for="Name" class="form-label"></label>
        <input type="text" asp-for="Name" class=" form-control" />
        <!--span to show validation error message-->
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class=" btn btn-secondary" asp-action="Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}