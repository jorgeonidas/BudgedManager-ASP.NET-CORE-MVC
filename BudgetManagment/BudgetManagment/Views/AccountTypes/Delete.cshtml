@model AccountType 
@{
    ViewData["Title"] = "Delete Account Type";
}
<h3 class="mb-3">Deleting account type @Model.Name, are you sure?</h3>
<form asp-action="DeleteAccountType">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
