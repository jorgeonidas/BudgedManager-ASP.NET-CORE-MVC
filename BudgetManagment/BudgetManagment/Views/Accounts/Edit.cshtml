@model AccountCreationViewModel
@{
    // Set the page title for the browser and layout
    ViewData["Title"] = "Edit Account";
}

<!-- Display the header with the current account name -->
<h1>Edit Account: @Model.Name</h1>

<!-- Form for editing the selected account -->
<form asp-action="Edit" method="post">
    <!-- Hidden field to store the account ID -->
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </label>
    </div>

    <!--Selector mapped wit account id values-->
    <div class="mb-3">
        <label asp-for="AccountTypeId" class="form-label">
            <select asp-for="AccountTypeId" asp-items="Model.AccounTypes" class="form-select"></select>
            <span asp-validation-for="AccountTypeId" class="text-danger"></span>
        </label>
    </div>

    <div class="mb-3">
        <label asp-for="Balance" class="form-label">
            <input asp-for="Balance" class="form-control" />
            <span asp-validation-for="Balance" class="text-danger"></span>
        </label>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </label>
    </div>

    <!-- Submit button to save changes -->
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <!-- Cancel button to return to the accounts list -->
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
