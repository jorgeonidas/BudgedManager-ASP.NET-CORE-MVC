@model AccountCreationViewModel
@{
    ViewData["Title"] = "Create Account";
}

<h1>Create Account</h1>
<h5>Refers to different accounts types; Debit, Creadit, Loan, etc..</h5>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class=" text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </label>
    </div>

    <!--Selector mapped wit account id values-->
    <div class="mb-3">
        <label asp-for="AccountTypeId" class="form-label">
            <select asp-for="AccountTypeId" asp-items="Model.AccounTypes" class="form-select"></select>
            <span asp-validation-for="AccountTypeId" class="text-danger"></span>
        </label>
    </div>

    <div class="mb-3">
        <label asp-for="Balance" class="form-label">
            <input asp-for="Balance" class="form-control" />
            <span asp-validation-for="Balance" class="text-danger"></span>
        </label>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}